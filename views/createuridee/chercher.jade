extends layout
block prepend head
    // Blog Entries Column
    .col-md-8
      -if (typeof(idees)!== 'undefined'){
        h1.page-header
          | Le resultat de recherche
          small #{idees.length} idees
        // First Blog Post
        // Third Blog Post
        each idee in idees
          h2
            a(href='#') #{idee.nom}
          p.lead
            | par  
            a(href='index.php') #{idee.Utilisateur.prenom} #{idee.Utilisateur.nom}
          p
            span.glyphicon.glyphicon-time
            |  ajout&eacute; le #{moment(idee.date_depot).format('MM/DD/YYYY')}
          hr
          img.img-responsive.img-hover(src='/#{idee.Image.url}', alt='')
          p #{idee.description}
          hr
          a
            input.btn.btn-primary.pull-right.enrichir(value='Enrichir',data-idIdee="#{idee.id}")
          a
            input.btn.btn-primary.pull-left(value='lire la suite')
          hr(style="clear:both;")
          // Pager
      ul.pager
        li.previous
          a(href='#') ← Precedent
        li.next
          a(href='#') Suivant →
    -}
    // Blog Sidebar Widgets Column
    .col-md-4
      // Blog Search Well
      .well
        h4 Chercher une idee
        form.input-group(action="/createuridee/chercher", method="post")
          input.form-control(type='text', name="nom")
          -if(categorie){
            input(type="hidden", name="idCategorie" , value="#{categorie.id}")
          -}
          span.input-group-btn
            input.btn.btn-default(type='submit' value="Chercher")
        // /.input-group
      // Blog Categories Well
      .well
        h4 Categories Idees
        .row
          .col-lg-6
            ul.list-unstyled
            each categorie in categories
              li
                a(href='/createuridee/chercher/categorie/#{categorie.id}') #{categorie.nom}
          //- // /.col-lg-6
          //- .col-lg-6
          //-   ul.list-unstyled
          //-     li
          //-       a(href='#') Category Name
          //-     li
          //-       a(href='#') Category Name
          //-     li
          //-       a(href='#') Category Name
          //-     li
          //-       a(href='#') Category Name
          // /.col-lg-6
        // /.row
      // Side Widget Well
      -if (typeof(categorie) !== 'undefined'){
        .well
          h4 #{categorie.nom}
          p #{categorie.description}
      -}
      #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') ×
              h4#exampleModalLabel.modal-title Ajouter des informations
            .modal-body
              form
                .form-group
                  label.control-label(for='message-text') Message:
                  textarea#message-text.form-control
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              input#sendenrich.btn.btn-default(type='submit' value="Send")
      append foot
        script.
          $(document).ready(function(){
             $(".enrichir").on("click",function(){
              $("#sendenrich").attr("data-ididee",$(this).attr("data-ididee"));
              $('#myModal').modal('show');
            })
            $("#sendenrich").on("click",function(){
              $.ajax({
                url: '/createuridee/enrichir/'+$("#sendenrich").attr("data-ididee"),
                data: 'message='+$("#message-text").val(),
                type: 'post',
                success:function(res){
                  var res = JSON.parse(res);
                  if(res.status=="success"){
                  
                  }
                }
              })
            });
          })
         