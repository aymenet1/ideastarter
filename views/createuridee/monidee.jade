extends layout
block prepend head
 for idee in monidee
  .container
  // Page Heading/Breadcrumbs
  .row
    .col-lg-12
      h1.page-header
        | #{idee.nom} 
        small
          | par 
          a(href='#') #{idee.Utilisateur.nom}
      ol.breadcrumb
        li
          a(href='/createuridee/mesidees') Mes Idees
        li.active #{idee.nom} 
  // /.row
  // Content Row
  .row
    // Blog Post Content Column
    .col-lg-8
      // Blog Post
      hr
      // Date/Time
      p
        i.fa.fa-clock-o
        |  déposé le #{moment(idee.date_depot).format('MM/DD/YYYY')}
      hr
      // Preview Image
      img.img-responsive(src='/#{idee.Image.url}', alt='')
      hr
      // Post Content
      p.lead
        | Catégorie: #{idee.Categorie.nom}
      p
        | #{idee.description}
      p
        | piece jointe 
        a(href='/#{idee.Piece.url}') #{idee.Piece.titre}
      hr
      // Blog Comments
      // Comments Form
      .well
        h4 laisser un commentaire:
        form(method='post',action='/createuridee/commentid?idee=#{idee.id}')
          .form-group
            textarea.form-control(rows='3', name='comment')
            input(type='hidden', name='idee', value='#{idee.id}')
          button.btn.btn-primary(type='submit') envoyer
      hr
      // Posted Comments
      // Comment
      for comment in comments
       .media
        a.pull-left(href='#')
          img.media-object(src='http://placehold.it/64x64', alt='')
        .media-body
          h4.media-heading
            |  #{comment.Utilisateur.nom}
            small  posté le #{moment(comment.createdAt).format('MM/DD/YYYY')}
          |                         #{comment.message}
          a.reply(id='reply_#{comment.id}')() Répondre
          .well(id='reponse_#{comment.id}')
           h4 Répondre:
           form(method='post',action='/createuridee/repcomment?idee=#{idee.id}&idc=#{comment.id}')
            .form-group
              textarea.form-control(rows='3', name='comment')
              input(type='hidden', name='idee', value='#{idee.id}')
            button.btn.btn-primary(type='submit') Répondre
            a(id='cancel_#{comment.id}')() Annuler
            // Nested Comment
          for repcomment in repcomments
            .media
              a.pull-left(href='#')
                img.media-object(src='http://placehold.it/64x64', alt='')
              .media-body
                h4.media-heading
                  | #{repcomment.Utilisateur.nom}
                  small August 25, 2014 at 9:30 PM
                |                                 #{repcomment.message}
          // End Nested Comment
        script.
          $("#reponse_#{comment.id}").hide()
          $("#reply_#{comment.id}").click(function(){
          $("#reponse_#{comment.id}").show()
          $("#reply_#{comment.id}").hide()
          })
          $("#cancel_#{comment.id}").click(function(){
          $("#reply_#{comment.id}").show()
          $("#reponse_#{comment.id}").hide()
          })
    .col-md-4
      // Blog Search Well
      .well
        h4 Blog Search
        .input-group
          input.form-control(type='text')
          span.input-group-btn
            button.btn.btn-default(type='button')
              i.fa.fa-search
