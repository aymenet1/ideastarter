extends layout
block prepend head
    // Page Content
    .container
      .row
        .col-lg-12
          h1.page-header
            | Mes Idees
            small 
          ol.breadcrumb
            li
              a(href='') Créateur
            li.active Mes Idees
      // /.row
      // Blog Post Row
      for idee in mesides
        .row
          .col-md-1.text-center
            p
              i.fa.fa-camera.fa-4x
            p #{moment(idee.date_depot).format('MM/DD/YYYY')}
          .col-md-5
            a(href='#')
              img.img-responsive.img-hover(src='/#{idee.Image.url}', alt='')
          .col-md-6 
            h3
              a(href='#') #{idee.nom}
            p
              | by 
              a(href='#') #{idee.Utilisateur.nom}
            p
              | #{idee.description}
            a.btn.btn-primary(href='/createuridee/monidee?id=#{idee.id}')
              | afficher
              i.fa.fa-angle-right
            a.btn.btn-primary#modif(href='/createuridee/modifier?id=#{idee.id}')
              | modifier
              i.fa.fa-angle-right
            a.btn.btn-primary#sup(href='javascript:confirmDelete("/createuridee/supprimer?id=#{idee.id}")')
              | supprimer
              i.fa.fa-angle-right
        // /.row
        hr
      
      
      // Pager
      .row
        ul.pager
          li.previous
            a(href='#') ← suiv
          li.next
            a(href='#') prec →
      // /.row
      append foot
      script.
        function confirmDelete(delUrl) {
         if (confirm("Are you sure you want to delete")) {
          document.location = delUrl;
          }
        }